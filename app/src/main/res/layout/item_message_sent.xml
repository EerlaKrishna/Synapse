<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/text_view_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_sent_bubble"
    android:padding="12dp"
    android:textColor="@android:color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="This is a sent message example. It can be quite long and wrap to multiple lines." />

    <TextView
        android:id="@+id/text_view_message_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/text_view_message_body"
        app:layout_constraintTop_toBottomOf="@id/text_view_message_body"
        android:layout_marginTop="4dp"
        tools:text="10:00 AM" />

</androidx.constraintlayout.widget.ConstraintLayout>
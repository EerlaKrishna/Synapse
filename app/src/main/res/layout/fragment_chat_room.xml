<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chats.ChatRoomFragment">

    <!-- Tabs for Improvement/Drawback -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_chat_room"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_messages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tab_layout_chat_room"
        app:layout_constraintBottom_toTopOf="@+id/message_input_area"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:listitem="@layout/item_message_sent" />

    <ProgressBar
        android:id="@+id/progress_bar_messages"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/recycler_view_messages"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_view_messages"
        app:layout_constraintStart_toStartOf="@+id/recycler_view_messages"
        app:layout_constraintEnd_toEndOf="@+id/recycler_view_messages"
        tools:visibility="visible"/>

    <!-- Message input area (Styled LinearLayout) -->
    <LinearLayout
        android:id="@+id/message_input_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/message_input_background"
        android:padding="0dp"
        android:gravity="center_vertical"
        android:elevation="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <EditText
        android:id="@+id/edit_text_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/hint_type_a_message"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent" /> <!-- Important: Make EditText background transparent -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_send_message"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/send_button"
            app:iconTint="?attr/colorPrimary"
            android:contentDescription="@string/button_send_description" />
</LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BroadGroupFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBroadGroups"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/list_item_group_display" />

    <!-- ProgressBar for loading state -->
    <ProgressBar
        android:id="@+id/progressBarBroadGroups"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/recyclerViewBroadGroups"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewBroadGroups"
        app:layout_constraintStart_toStartOf="@+id/recyclerViewBroadGroups"
        app:layout_constraintEnd_toEndOf="@+id/recyclerViewBroadGroups"
        tools:visibility="visible"/>

    <!-- TextView for the empty state -->
    <TextView
        android:id="@+id/textViewNoChatsPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No chats yet. Start a new conversation!"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="gone"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_new_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/baseline_add_24"
        android:contentDescription="@string/desc_add_new_group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_group_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="false"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- NEW: Dot Indicator -->
        <!-- Positioned to the left of unread_count_text_view or in its place if unread_count is hidden -->
        <ImageView
            android:id="@+id/unread_dot_indicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_unread_dot"
            android:layout_alignTop="@id/last_message_text_view"
            android:layout_alignBottom="@id/last_message_text_view"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:contentDescription="@string/unread_indicator_description" /> <!-- Add content description -->


        <TextView
            android:id="@+id/group_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/timestamp_text_view"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Very Long Group Name Example That Might Overlap" />

        <TextView
            android:id="@+id/last_message_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_name_text_view"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/unread_dot_indicator"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Sender: This is the last message snippet..."
            tools:textStyle="bold"/> <!-- tools:textStyle for preview -->

        <TextView
            android:id="@+id/message_type_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/last_message_text_view"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/unread_dot_indicator"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="gone"
            tools:text="Type: Improvement"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/timestamp_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/group_name_text_view"
            android:textSize="12sp"
            tools:text="10:30 AM" />

        <!-- Optional: Unread Count Badge (you might hide this if the dot is shown) -->
        <TextView
            android:id="@+id/unread_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/timestamp_text_view"
            android:layout_marginTop="4dp"
            android:background="@drawable/unread_badge_background"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:gravity="center"
            android:visibility="gone"
            tools:text="3"
            tools:visibility="visible"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
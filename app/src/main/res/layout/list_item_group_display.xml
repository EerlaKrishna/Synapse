<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/card_view_group_item"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginStart="8dp"
android:layout_marginTop="8dp"
android:layout_marginEnd="8dp"
android:layout_marginBottom="4dp"
app:cardElevation="2dp"
app:cardCornerRadius="12dp"
app:cardUseCompatPadding="false"
android:clickable="true"
android:focusable="true"
android:foreground="?android:attr/selectableItemBackground">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/group_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/timestamp_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Very Long Group Name Example That Might Overlap" />

    <TextView
        android:id="@+id/timestamp_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/group_name_text_view"
        android:textSize="12sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        tools:text="10:30 AM" />

    <!-- Unread Dot Indicator - Aligned with last_message_text_view, to its right -->
    <ImageView
        android:id="@+id/unread_dot_indicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_unread_dot"
        android:layout_alignTop="@id/last_message_text_view"
        android:layout_alignBottom="@id/last_message_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:contentDescription="@string/unread_indicator_description" />

    <TextView
        android:id="@+id/last_message_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_name_text_view"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/unread_dot_indicator"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="?attr/colorOnSurfaceVariant"
        tools:text="Sender: This is the last message snippet..."
        tools:textStyle="bold"/>

    <!-- Container for Improvement and Drawback Icons -->
    <!-- Positioned BELOW the last_message_text_view (and thus below the unread_dot_indicator) -->
    <!-- and aligned to the end -->
    <LinearLayout
        android:id="@+id/typed_message_indicators_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/last_message_text_view"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp">

        <!-- Improvement Message Icon with Count -->
        <FrameLayout
            android:id="@+id/improvement_message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/improvement_message_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_message_generic"
                app:tint="#4CAF50"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/improvement_count_description" />

            <TextView
                android:id="@+id/improvement_count_badge"
                android:layout_width="wrap_content"
                android:minWidth="18dp"
                android:layout_height="18dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="-4dp"
                android:layout_marginEnd="-4dp"
                android:background="@drawable/unread_badge_background"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:backgroundTint="#4CAF50"
                tools:text="5" />
        </FrameLayout>

        <!-- Drawback Message Icon with Count -->
        <FrameLayout
            android:id="@+id/drawback_message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/drawback_message_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_message_generic"
                app:tint="#F44336"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/drawback_count_description" />

            <TextView
                android:id="@+id/drawback_count_badge"
                android:layout_width="wrap_content"
                android:minWidth="18dp"
                android:layout_height="18dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="-4dp"
                android:layout_marginEnd="-4dp"
                android:background="@drawable/unread_badge_background"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:backgroundTint="#F44336"
                tools:text="2" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/message_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/last_message_text_view"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/typed_message_indicators_container"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:visibility="gone"
        tools:text="Type: Improvement"
        tools:visibility="visible"/>

</RelativeLayout>
</com.google.android.material.card.MaterialCardView>

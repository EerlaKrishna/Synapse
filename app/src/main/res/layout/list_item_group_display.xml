<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?android:attr/selectableItemBackground">

        <!-- You can add an ImageView for a group icon here if you have one -->
        <!-- <ImageView
            android:id="@+id/group_icon_image_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            tools:srcCompat="@tools:sample/avatars" /> -->

        <TextView
            android:id="@+id/group_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/timestamp_text_view"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Group Name Example" />

        <TextView
            android:id="@+id/last_message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_name_text_view"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/unread_count_text_view"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Sender: This is the last message snippet..." />

        <!-- NEW TEXTVIEW FOR MESSAGE TYPE -->
        <TextView
            android:id="@+id/message_type_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/last_message_text_view"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/unread_count_text_view"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="gone"
            tools:text="Type: Improvement"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/timestamp_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/group_name_text_view"
            android:textSize="12sp"
            tools:text="10:30 AM" />

        <TextView
            android:id="@+id/unread_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/timestamp_text_view"
            android:layout_marginTop="4dp"
            android:background="@drawable/unread_badge_background"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:gravity="center"
            android:visibility="gone"
            tools:text="3"
            tools:visibility="visible"/>

    </RelativeLayout>